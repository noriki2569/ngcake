<div class="container">
  <div class="row">
    <font size="5">
      <p>注文履歴一覧</p>
    </font>
  </div>

  <div class="row justify-content-left">
    <table class="table table-bordered">
      <thead　class="thead-secondary">
        <tr>
          <th>注文日</th>
          <th>配送先</th>
          <th>注文商品</th>
          <th>支払金額</th>
          <th>注文詳細</th>
        </tr>
      </thead>

      <tbody>
        <% @order.each do |order| %>
         <tr>
          <td>
            <%= order.created_at.strftime('%Y/%m/%d') %>
          </td>
          <td>
            〒<%= order.postal_code %></br>
            <%= order.address %>
          </td>
          <td>
            <%= order.name %>
          </td>
          <td>
            <%= order.total_payment.to_s(:delimited) %>
          </td>
          <td>
            <%= link_to "表示する", order_path(order), :class => "btn btn-primary" %>
          </td>
        </tr>
         <% end %>
      </tbody>
    </table>
  </div>
</div>