<div class="container">
  <div class="row">
    <h4>会員情報編集</h4>
  </div>
  <div class="row">
    <%= form_with model: @customer, url: customers_update_path, method: :patch do |f| %>
      <div class="field">
        <p>氏名</p>
        <%= f.text_field :last_name %>
        <%= f.text_field :first_name %>
      </div>

      <div class="field">
        <p>フリガナ</p>
         <%= f.text_field :last_name_kana %>
         <%= f.text_field :first_name_kana %>
      </div>

      <div class="field">
        <%= f.label :email, "メールアドレス" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field">
        <%= f.label :postal_code, "郵便番号" %>
        <%= f.text_field :postal_code %>
      </div>

      <div class="field">
         <%= f.label :address, "住所" %>
         <%= f.text_field :address %>
      </div>

      <div class="field">
        <%= f.label :telephone_number, "電話番号" %>
        <%= f.telephone_field :telephone_number %>
      </div>

      <div class="row">
         <div class="col-md">
          <%= f.submit "編集内容を保存", :class => "btn btn-success" %>
         </div>
         <div class="col-md">
           <%= link_to "退会する", customers_confirmation_path, :class => "btn btn-danger" %>
         </div>
      </div>
    <% end %>
  </div>
</div>
