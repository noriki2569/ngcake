<div class="container">
  <div class="row justify-content-left">
    <div class="col-9">
      <div class="bg-light-subtle">
        <font size="5">
          <p>ショッピングカート</p>
        </font>
      </div>
    </div>

    <div class="col-3">
      <div class="bg-light-subtle">
        <font size="5">
          <%= link_to "カートを空にする", cart_items_destroy_all_path, method: :delete, "data-confirm" => "本当に空にしますか？", class: "btn btn-danger" %>
        </font>
      </div>
    </div>
  </div>

  <div class="row justify-content-center">
    <div class="col-md-10 offset-md-1">
    <table class="table table-bordered">
      <thead>
        <tr>
          <th colspan="3">商品名</th>
          <th>単価(税込)</th>
          <th>数量</th>
          <th>小計</th>
          <th colspan="2"></th>
        </tr>
      </thead>

      <tbody>
        <% @cart_items.each do |cart_item| %>
        <tr>
          <td colspan="3"><%= cart_item.item.name %></td>
          <td><%= cart_item.item.tax_price.to_s(:delimited) %></td>
          <td>
            <%= form_with model: @cart_item, url: cart_item_path(cart_item), method: :patch do |f| %>
            <%= f.hidden_field :id, :value => cart_item.id %>
            <%= f.select :amount, [*(1..10)] %>
            <%= f.submit "変更", :class => "btn btn-success" %>
            <% end %>
          </td>
          <td><%= cart_item.subtotal.to_s(:delimited) %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
    </div>

    <div class="col-md-1"></div>
  </div>
</div>