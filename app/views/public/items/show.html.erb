<div class="container">
  <div class="row">
    <div class="col-md-4">
      <%= image_tag @item.image, size: "250x250" %>
    </div>
    <div class="col-md-7 offset-md-1">
      <strong>
        <%= @item.name %>
      </strong></br>
      <%= @item.introduction %></br>
      <%= @item.tax_price.to_s(:delimited) %>円
      <%= form_with model: @cart_item_new, url: cart_items_path do |f| %>
      <%= f.hidden_field :item_id, value: @item.id %>
      <%= f.select :amount, [*(1..10)] %>
      <%= f.submit "カートに入れる", :class => "btn btn-success" %>
      <% end %>
    </div>
  </div>
</div>