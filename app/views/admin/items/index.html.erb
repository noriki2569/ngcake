<div class="container">
  <div class="row">
    <div class="col-md">
      <h3>商品一覧</h3>
    </div>
    <div class="col-md">
      <%= link_to new_admin_item_path, class:"btn btn-outline-secondary rounded-circle" do %>
      <i class="fa-solid fa-plus" style="color:#6b7988;"></i>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-md">
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <td>商品ID</td>
            <td>商品名</td>
            <td>税抜価格</td>
          </tr>
        </thead>
        <tbody>
          <% @items.each do |item| %>
          <tr>
            <td>
              <%= item.id %>
            </td>
            <td>
              <%= link_to item.name, admin_item_path(item.id) %>
            </td>
            <td>
              <%= item.price %>
            </td>
          </tr>
          <% end %>
          <%= paginate @items %>
        </tbody>
      </table>
    </div>
  </div>
</div>