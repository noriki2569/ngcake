<div class="container">
  <div class="row">
    <div class="col-md">
      <h3>商品一覧</h3>
    </div>
  </div>
  <div class="row">
    <div class="col-md">
      <table>
        <thead>
          <tr>商品ID</tr>
          <tr>商品名</tr>
          <tr>税抜価格</tr>
        </thead>

        <tbody>
          <%= @items.each do |item| %>
          <tr>
            <td>
              <%= @items.id %>
            </td>
            <td>
              <%= link_to item.name, admin_item_path(item.id) %>
            </td>
            <td>
              <%= item.price %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>