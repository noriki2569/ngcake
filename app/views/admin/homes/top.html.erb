<div class="container">
  <div class="row justify-content-left">
    <font size="5">
      <p>注文履歴一覧</p>
    </font>
  </div>

  <div class="row justify-content-center">
    <table class="table">
      <thead class="thead-active">
        <tr>
          <th>注文日時</th>
          <th>購入者</th>
          <th>注文個数</th>
        </tr>
      </thead>
      <tbody>
        <% @orders.each do |order| %>
        <tr>
          <td>
            <%= link_to order.created_at.strftime('%Y/%m/%d'), admin_order_path(order) %>
          </td>
          <td>
            <%= order.name %>
          </td>
          <% order.order_details.each do |order_detail| %>
          <% @count += order_detail.quantity %>
          <% end %>
          <td>
            <%= @count %>
          </td>
          <% @count = 0 %>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>